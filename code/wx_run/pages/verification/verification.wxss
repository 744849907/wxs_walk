page,
.page,
.page__bd{
    height: 100%;
    color: #999;
    background-color: #eee
}
.page__bd{
    padding-bottom: 0;
}
.weui-navbar{
  background-color: #fff
}
.weui-tab__content{
  display: flex;
  flex-direction: column;
}
.weui-navbar__item.weui-bar__item_on {
  color:#000;
  font-weight: bold
}
.weui-navbar__slider {
  background-color: #84C5D4
}


.list-boxing {
  display: flex;
  flex-flow: column;
  width: 100%;
  font-size: small
}
.list-title {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  padding: 2%
}
.list-title .list-title-index {
  width: 35rpx;
  height: 35rpx
}
.list-title .list-title-data {
  flex-grow: 4;
  margin-left: 5%; 
  display: inline-flex;
  align-items: center
}
.list-title .list-title-power {
  display: inline-flex;
  align-items: center;
  font-size: 30rpx;
  color: #84C5D4
}
.list-title-powericon {
  width: 30rpx;
  height: 30rpx;
}
.list-content {
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  padding: 2%;
  background-color: #eee
}
.list-content image {
  margin-left: 8%; 
  width: 30rpx;
  height: 30rpx
}
.list-content-msg {
  flex-grow: 2;
  margin-left: 2%
}


.content {
  display: flex;
  flex-flow: column;
  align-items: center;
  font-size: small;
  width: 100%;
}
.change-list {
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  background-color: #FFF;
  border-bottom: 3rpx solid #eee;
  margin: 2%;
  padding-top: 3%;
  padding-bottom: 3%;
  border-radius: 21rpx;
}
.change-list image {
    flex-grow: 1;
    
    margin-left: 3%;
    margin-right: 1.5%;
    border-bottom-right-radius: 50rpx
}
.change-list .change-content {
  flex-grow: 2;
  display: flex;
  flex-flow: column;
  justify-content: center
}
.change-list .change-content .change-title {
  font-weight: bold;
}
.change-list .change-content .change-use {
  color: #000
}
.change-list .change-content .change-use span {
  color: #8DC4D4;
}
.change-list button {
  flex-grow: 1;
  width: 107rpx;
  height: 51rpx;
  margin-right: 3%;
  color: #fff;
  background-color: #8DC4D4;
  font-size: 21rpx;
  padding: 0 0
 
}

.list-line {
  width: 100%;
  height: 40rpx;
  background-color: #eee
}
.item-line {
  display: flex;
}
.content{
  width: 100%;
  display: flex;
  flex-flow: column;
  align-items: center;
  font-size: 33rpx

}
.content image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
  margin-top: 10%;
}
.info-edit image{
  width: 45rpx;
  height: 45rpx
}
.user-info {
  display: flex;
  flex-flow: row;
  width: 100%;
  justify-content: center;
  align-items: center;
  margin-top: 20%;
  border-top: 1rpx solid #eee;
  border-bottom: 45rpx solid #eee
}
.user-info-item{
  flex-grow: 1;
  display: flex;
  align-items: center;
  flex-flow: column;
}
.weui-cell {
  width: 88%;
  padding-left: 12%;
  padding-right: 12%;
  
}
.list-line {
  border-top: 45rpx solid #eee;
  border-bottom: 1rpx solid #eee  
}
.user-info-item .item-title {
  color: #999
}
.user-info-item .item-data span{
  font-weight: bold;
  font-size: 40rpx;
  margin-right: 5rpx
  
}